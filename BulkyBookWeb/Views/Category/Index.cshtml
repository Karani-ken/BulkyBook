@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-1">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Todo List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Todo
            </a>
        </div>
    </div>

    <br/>
    <br/>

@*    table*@
    <table class="table table-borderd table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Todo Name
            </th>
            <th>
               Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @item.Description
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
</table>


</div>


 